@{
    ViewData["Title"] = "Filtred Visual Novels";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Message</h1>
</div>


<div class="text-center">
    <div class="row g-2">
        @foreach (VisualNovel vn in ViewBag.Vns)
        {
            <div class="card col-md-4 mt-4 col-lg-4">
                @if (vn.CoverImagePath != null)
                {
                    <img loading="lazy" src="https://localhost:7022/api/VisualNovel/GetCoverImage?id= + @vn.Id.ToString()" class="home_cover_image">
                }
                else
                {
                    <img loading="lazy" src="images/thumbnail.png" class="home_cover_image">
                }
                <h1>@vn.Title</h1>
                <button type="button" class="btn">
                    <a asp-controller="Novel" asp-action="Novel" asp-route-id="@vn.Id" asp-route-spoilerLevel="0">More</a>
                </button>
            </div>
        }
    </div>
</div>

